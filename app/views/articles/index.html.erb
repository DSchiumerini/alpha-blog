<h1>All articles</h1>


<p><%= link_to 'Create Article', new_path %></p>

<table>
   <tr>
       <th>ID</th>
       <th>Title</th>
       <th>Description</th>
       <th>Published</th>
       <th></th>
   </tr> 
    
    <% @articles.each do |element| %>
    <tr>
        <th><%= link_to "#{element.id}", article_path(element.id) %></th>
        <th><%= element.title %></th>
        <th><%= element.description %></th>
        <th><%= element.created_at %></th>
        <th><%= link_to 'Edit', edit_article_path(element.id) %></th>
    </tr>
    <% end %>
</table>


<p><%= link_to 'Home', root_path %></p>