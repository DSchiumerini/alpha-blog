<h1>All articles</h1>


<% @article.each do |element| %>

    <h2>Showing selected article: <%= element.id %> <%= link_to 'Edit', edit_article_path(element.id) %></h2>
    <p>Title: <%= element.title %>. </p>
    <p>Description: <%= element.description %>.</p>
    <p>Created at: <%= element.created_at %>.</p>

<% end %>


